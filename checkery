from tkinter import *
def checkersCell(Canvas):
    def __init__(self, master, coords,color):
        Canvas.__init__(self,master,height=1,width=2,bg=color)
        self.coords = coords
def checkersGrid(Frame):
    def __init__(self, master):
        Frame.__init__(self,master,bg='black')
        self.grid()
        self.cells = {} # set up dictionary for cells
        color = 'white'
        for x in range(8):
            for y in range(8):
                coord = (x,y)
                self.cells[coord] = checkersCell(self,coord,color)
                self.cells[coord].grid(row=x,column=y)
                if color == 'white':
                    color = 'green'
                else:
                    color = 'white'
def checkers():
    root = Tk()
    root.title('Checkers')
    sg = checkersGrid(root)
    root.mainloop()
checkers()
