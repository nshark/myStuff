from tkinter import *
from tkinter import messagebox
import random
class Checkers_cell(Canvas):
    def __init__(self, master, coords, color):
        Canvas.__init__(self, master, bg=color, height = 25, width = 25)
        self.coords = coords
        self.master = master
class Checkers_Grid(Frame):
    def __init__(self, master):
        Frame.__init__(self,master,bg='dim grey')
        self.grid()
        self.units = {}
        for x in range(8):
            if x % 2 == 0:
                color = 'white'
            else:
                color = 'green'
            for y in range(8):
                self.units[(x, y)] = Checkers_cell(self, (x, y), color)
                self.units[(x, y)].grid(row=y,column=x)
                if color == 'white':
                    color = 'green'
                else:
                    color = 'white'
def checkers():
    root = Tk()
    root.title('Checkers')
    sg = Checkers_Grid(root)
    root.mainloop()
checkers()
